<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="item"
            type="com.saadahmedev.currencyconverter.data.dto.CurrencyDto" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/ripple_bg_dark_grey">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/cubano"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/_10sdp"
            android:text="@{item.name}"
            android:textColor="@color/static_white"
            android:textSize="@dimen/_10ssp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/cubano"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/_10sdp"
            android:shadowColor="@color/static_main"
            android:shadowRadius="10"
            android:text="@{item.code}"
            android:textColor="@color/static_main"
            android:textSize="@dimen/_12ssp" />

    </RelativeLayout>

</layout>